<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="8dp"
    android:layout_marginBottom="0dp">

    <!-- Contenido de cada foro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/textViewTituloForo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Título del Foro"
            android:textSize="12sp"
            android:textColor="#0000FF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del Usuario"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewUltimoMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Último mensaje"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNumeroReplicas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
