<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Barra de navegación con menú hamburguesa y título centrado -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8A2BE2"
            android:padding="16dp">

            <!-- Título centrado -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empleos"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!-- Título de la oferta centrado -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la Oferta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp" />

        <!-- Imagen de la oferta -->
        <ImageView
            android:id="@+id/ivImagenOferta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvNombreEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Empresa"
            android:paddingTop="16dp"
            android:layout_marginStart="8dp" />

        <!-- Descripción de la oferta -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la oferta"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:layout_marginStart="8dp" />

        <!-- Dirección de la oferta -->
        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Curso requerido -->
        <TextView
            android:id="@+id/tvCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso requerido"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Localidad -->
        <TextView
            android:id="@+id/tvLocalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localidad"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Modalidad -->
        <TextView
            android:id="@+id/tvModalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modalidad"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Tipo de empleo -->
        <TextView
            android:id="@+id/tvTipoEmpleo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Empleo"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvNivelEducativo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel educativo deseable"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tvOtrosRequisitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otros requisitos"
            android:paddingTop="8dp"
            android:layout_marginStart="8dp" />

        <!-- Botón para postularse al empleo centrado y reducido -->
        <Button
            android:id="@+id/btnPostularse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postularse al empleo"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3CB371"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
