<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.registracion.RegistrarEstudiante">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="396dp"
        android:layout_height="719dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.567">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/tvDatosEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:paddingStart="5dp"
                android:text="@string/tvDatosEmp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNombreEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/txtNombreEmp"
                android:inputType="text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtDescripcionEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="Apellido"
                android:inputType="text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtSectorEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="DNI"
                android:inputType="text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="25dp"
                    android:text="Género"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="15sp"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="25dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvUsuarioEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:paddingStart="5dp"
                android:text="@string/txtUsuario"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNombreUserEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/txtNombreUsuarioEmp"
                android:inputType="text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtPassEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/txtPassEmp"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtRepetirPassEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:hint="@string/txtRepetirPassEmp"
                android:inputType="textPassword"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvContactoEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:paddingStart="5dp"
                android:text="@string/tvContactoEmp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtEmailEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/txtEmailEmp"
                android:inputType="textEmailAddress"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtTelefonoEmp"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:hint="@string/txtTelefonoEmp"
                android:inputType="phone"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvUbicacionEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:paddingStart="5dp"
                android:text="@string/tvUbicacionEmp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtDireccionEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:hint="@string/txtDireccionEmp"
                android:inputType="text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:text="@string/tvProvinciaEmp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spProvinciaEmp"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:text="@string/tvLocalidadEmp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spLocalidadEmp"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="Educación"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="Nivel educativo"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="Estado" />

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:paddingEnd="15dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="8sp"
                android:paddingStart="5dp"
                android:text="Experiencia Laboral"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="15sp"
                android:ems="10"
                android:hint="Lugar de trabajo"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="15sp"
                android:ems="10"
                android:hint="Cargo ocupado"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="15sp"
                android:ems="10"
                android:hint="Tareas realizadas"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="20sp"
                android:ems="10"
                android:hint="Duracion"
                android:inputType="text" />

            <Button
                android:id="@+id/btnRegistrarEmp"
                android:layout_width="351dp"
                android:layout_height="52dp"
                android:layout_marginStart="20sp"
                android:text="@string/btnRegistrarEmp"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Registrar estudiante"
        android:textColor="#FFFCFC"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.386"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4" />


</androidx.constraintlayout.widget.ConstraintLayout>