<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Banner superior -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8A2BE2"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/burger_menu"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empleos"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <!-- Título centrado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleo - Analista de ......"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Imagen -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img1_tpf"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Imagen de capacitación"
            android:paddingBottom="16dp" />

        <!-- Texto 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto1: Tareas a realizar ......."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Texto 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto 2: Requisitos........"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Texto 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto 3"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Botón de postulación -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postularse al empleo"
            android:backgroundTint="#3CB371"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
