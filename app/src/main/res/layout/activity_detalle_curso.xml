<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8A2BE2"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacitaciones"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtNombreCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del curso"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <ImageView
            android:id="@+id/imgCurso"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Imagen de capacitación"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/txtDescripcionCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del curso"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- ProgressBar para mostrar mientras se carga el estado de inscripción -->
        <ProgressBar
            android:id="@+id/progressBarLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnIniciarCapacitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text=" Registrarme "
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnIniciarCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Iniciar Curso"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnDescargarCertificado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Certificado"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
