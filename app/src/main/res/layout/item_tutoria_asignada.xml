<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewTutoria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".actividades.tutorias.TutoriasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del estudiante -->
        <TextView
            android:id="@+id/txtNombreEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Estudiante: [Nombre Estudiante]"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nombre del curso -->
        <TextView
            android:id="@+id/txtNombreCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Curso: [Nombre del curso]"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Tema de la tutoría -->
        <TextView
            android:id="@+id/txtTemaTutoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Tema: [Tema]"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- Comentarios -->
        <TextView
            android:id="@+id/txtComentariosTutoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Comentarios: [Comentarios del estudiante]"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- Fecha de la tutoría -->
        <TextView
            android:id="@+id/txtFechaTutoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Fecha: [Fecha]"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Botón 'Iniciar Chat' -->
            <Button
                android:id="@+id/btnIniciarChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Iniciar Chat"
                android:textColor="@android:color/white" />

            <!-- Botón 'Finalizar Tutoría' -->
            <Button
                android:id="@+id/btnFinalizarTutoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:text="Finalizar Tutoría"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
